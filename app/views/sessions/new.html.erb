<h1><%= t(:title_signin) %></h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, t(:password) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t(:button_signin) %>
  </div>
<% end %>

<p><%= t(:question_new) %>? <%= link_to t(:link_signup), signup_path %></p>
