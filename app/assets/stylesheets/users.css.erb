/* User show page */

table.profile {
  width: 100%;
  margin-bottom: 0;
}

td.main {
  width: *;
  padding: 1em;
  vertical-align: top;
}

td.sidebar {
  width: 265px;
  padding: 1em;
  vertical-align: top;
  background: #ffc;
}

/* User Liste */

ul.users {
  margin-top: 1em;
}

.users li {
  list-style: none;
}

/* doctors badge */
.doctorsbadgesidebar a {
  text-decoration: none;
  color: #000;
}

.doctorsbadgesidebar a:hover {
  text-decoration: none;
  color: #000;
}

.doctorsbadgesidebar a:visited {
  text-decoration: none;
  color: #000;
}

.doctorsbadge {
  background-image:url(<%= asset_path 'users/doctors_badge.png' %>);
  background-repeat:no-repeat;
  margin-top: -4px;
  vertical-align: top;
}
.doctorsserver {
  padding-top: 15px;
  margin-left: 153px;
}

.doctorsname {
  margin-top: -15px;
  margin-left: 10px;
}

.doctorsavatar {
  margin-top: -21px;
  margin-left: 174px;
}

.doctorsvalues {
  margin-top: -70px;
  margin-left: 10px;
  line-height: 1;
}

.doctorstimestamp {
  display: block;
  font-size: 85%;
  color: #666;
}

.doctorslinks {
  margin-top: -20px;
  font-size: 12px;
  float: right;
}