/* User show page */

table.profile {
  width: 100%;
  margin-bottom: 0;
}

td.main {
  width: *;
  padding: 1em;
  vertical-align: top;
}

td.sidebar {
  width: 265px;
  padding: 1em;
  vertical-align: top;
  background: #ffc;
}

/* user signup form */

div.field, div.actions {
  margin-bottom: 10px;
}

/* error messages */

.field_with_errors {
  margin-top: 10px;
  padding: 2px;
  background-color: red;
  display: table;
}

.field_with_errors label {
  color: #fff;
}

#error_explanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: #c00;
  color: #fff;
}

#error_explanation p {
  color: #333;
  margin-bottom: 0;
  padding: 5px;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}

/* User Liste */

ul.users {
  margin-top: 1em;
}

.users li {
  list-style: none;
}

/* doctors badge */
.doctorsbadgesidebar a {
  text-decoration: none;
  color: #000;
}

.doctorsbadgesidebar a:hover {
  text-decoration: none;
  color: #000;
}

.doctorsbadgesidebar a:visited {
  text-decoration: none;
  color: #000;
}

.doctorsbadge {
  background-image:url(<%= asset_path 'users/doctors_badge.png' %>);
  background-repeat:no-repeat;
  margin-top: -4px;
  vertical-align: top;
}
.doctorsserver {
  padding-top: 15px;
  margin-left: 153px;
}

.doctorsname {
  margin-top: -15px;
  margin-left: 10px;
}

.doctorsavatar {
  margin-top: -21px;
  margin-left: 174px;
}

.doctorsvalues {
  margin-top: -70px;
  margin-left: 10px;
  line-height: 1;
}

.doctorstimestamp {
  display: block;
  font-size: 85%;
  color: #666;
}

.doctorslinks {
  margin-top: -20px;
  font-size: 12px;
  float: right;
}